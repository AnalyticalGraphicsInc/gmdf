{
    "name": "stk-gmdf-tools",
    "displayName": "STK GMDF Tools",
    "description": "Tools for editing GMDF files.",
    "version": "1.0.0",
    "publisher": "agi",
    "license": "Apache-2.0",
    "repository": {
        "url": "https://github.com/AnalyticalGraphicsInc/gmdf"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Formatters",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:json",
        "onCommand:gmdf.extractFromGltf",
        "onCommand:gmdf.injectIntoGltf"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "gmdf.extractFromGltf",
                "title": "Extract GMDF from glTF"
            },
            {
                "command": "gmdf.injectIntoGltf",
                "title": "Inject GMDF into glTF"
            }
        ],
        "languages": [
            {
                "id": "json",
                "extensions": [
                    ".gmdf"
                ]
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "*.gmdf",
                "url": "./gmdf_schema/gmdf.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "updateSchema": "cp ../schema/*.json gmdf_schema/"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
